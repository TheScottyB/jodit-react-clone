{
  "name": "jodit-react",
  "version": "1.1.0",
  "description": "Modern Jodit WYSIWYG editor React component",
  "main": "build/jodit-react.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development --open",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --config=jest.config.js",
    "test:sync": "jest --config=jest.config.js src/__tests__/sync.test.ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "demo": "cd examples && webpack serve --config ./webpack.config.js --mode development --port 4000 --hot"
  },
  "keywords": [
    "react",
    "jodit",
    "html",
    "text",
    "editor",
    "wysiwyg",
    "rich editor",
    "rich text editor",
    "rte",
    "typescript"
  ],
  "author": "Chupurnov <chupurnov@gmail.com> (https://xdsoft.net/)",
  "license": "MIT",
  "dependencies": {
    "@square/web-sdk": "^2.1.0",
    "@types/node": "^22.15.18",
    "axios": "^1.9.0",
    "bottleneck": "^2.19.5",
    "dotenv": "^16.5.0",
    "jodit": "^4.6.2",
    "winston": "^3.17.0"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "style-loader": "^3.3.4",
    "ts-jest": "^29.3.3",
    "typescript": "^5.7.3",
    "uuid": "^11.1.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jodit/jodit-react.git"
  },
  "bugs": {
    "url": "https://github.com/jodit/jodit-react/issues"
  },
  "homepage": "https://xdsoft.net/jodit/",
  "engines": {
    "node": ">=18.0.0"
  }
}
